local a="teleportPos.txt"local b=game:GetService("StarterGui")local c=game:GetService("UserInputService")local d=game:GetService("Players")local RunService=game:GetService("RunService")local function e(f,g,h)b:SetCore("SendNotification",{Title=f,Text=g,Duration=h or 3})end;local function i()local j=d.LocalPlayer;return j.Character and j.Character:FindFirstChild("HumanoidRootPart")end;local function k(l)if isfile(a)and not l then e("📍 Coordenada já salva!","Use SHIFT+G para sobrescrever.",4)return end;local m=i()if m then local n=m.Position;writefile(a,n.X..","..n.Y..","..n.Z)e("✅ Sucesso!","Posição salva com sucesso.",3)end end;local teleporting=false;local function o()if teleporting then e("⏳ Aguarde","Teleporte em andamento...",2)return end;if not isfile(a)then e("⚠️ Erro","Nenhuma coordenada salva encontrada!",3)return end;local p=readfile(a)local x,y,z=p:match("([^,]+),([^,]+),([^,]+)")if not(x and y and z)then e("⚠️ Erro","Arquivo de coordenadas inválido!",3)return end;local m=i()if m then teleporting=true;local targetPos=Vector3.new(tonumber(x),tonumber(y),tonumber(z))local attempts=0;local connection;connection=RunService.Heartbeat:Connect(function()attempts=attempts+1;m.CFrame=CFrame.new(targetPos)if attempts>=30 then connection:Disconnect()teleporting=false;e("🚀 Teleporte","X="..math.floor(tonumber(x)).." | Y="..math.floor(tonumber(y)).." | Z="..math.floor(tonumber(z)),4)end end)end end;c.InputBegan:Connect(function(q,r)if r then return end;local s=q.KeyCode;local t=c:IsKeyDown(Enum.KeyCode.LeftShift)if s==Enum.KeyCode.G then k(t)elseif s==Enum.KeyCode.H then o()end end)e("📌 Controles","G = Salvar | SHIFT+G = Sobrescrever | H = Teleportar",6)
